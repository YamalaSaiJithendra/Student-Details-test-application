@model IEnumerable<Practice1.Models.TeacherModel>

<p>
    <a href='@Url.Action("AddTeacherDetails")' class="btn btn-primary">Add New Teacher</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachingSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone_Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeachingSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone_Number)
            </td>
                <td>

                    @Html.ActionLink("Edit", "EditTeacherDetails", new {  id=item.Id }) |
                    @Html.ActionLink("Delete", "DeleteTeacherDetails", new { id = item.Id },new {onclick="return confirm('Are sure wants to delete?');" })
                </td>
        </tr>
}
    </tbody>
</table>
